@model Escuela
@{
    ViewData["ViewDataName"] = "Información Escuela";
    ViewData["Title"]= "Información Escuela";
    @* Layout = "_Simple"; *@
}

<h1>@ViewData["Title"]</h1>
<h1>ID: @Model.Id </h1>
<h2>Nombre: @Model.Nombre </h2>
<h3>Tipo de Escuela: @Model.TipoEscuela</h3>
<address>
    <p>Dirección: @Model.Dirección</p>
    <p>País: @Model.Pais</p>
    <p>Ciudad: @Model.Ciudad</p>
</address>
<p>Año creación: @Model.AñoDeCreación </p>


